<% if params[:top_40] || !params[:top_40] && !params[:keyword_search] %>
  <h1>Top Movies</h1>
<% else %>
  <h1>Search Results</h1>
<% end %>


<%= button_to 'Find Top Rated Movies', movies_path, method: :get, params: {top_40: true} %>

<h3>OR</h3>

<%= form_with url: movies_path, local: true, method: :get do |f| %>
  <%= f.label :keyword_search  %>
  <%= f.text_field :keyword_search, :placeholder => 'Search by movie title', required: true %>

  <%= f.submit 'Find Movies' %>
<% end %>





<% @movies1.each do |movie| %>
  <div class='movie'>
    <%= link_to "#{movie[:title]}", movie_show_path(movie[:id]), class: 'title' %><br>
    <span>Vote average:</span>
    <span class='vote_avg'><%= movie[:vote_average] %></span><br><br>
  </div>
<% end %>

<% unless @movies2.nil?  %>
  <% @movies2.each do |movie| %>
    <div class='movie'>
      <%= link_to "#{movie[:title]}", movie_show_path(movie[:id]), class: 'title' %><br>
      <span>Vote average:</span>
      <span class='vote_avg'><%= movie[:vote_average] %></span><br><br>
    </div>
  <% end %>
<% end %>
